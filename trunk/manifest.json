{
	"name": "Minimalist Gmail",
	"version": "1.5.0",
	"description": "Individually hide 50+ interface elements, custom logos and row highlighting, favicon/desktop notifier, and more...",
	"icons": {
         "16": "img/icons/icon16.png",
		 "48": "img/icons/icon48.png",
		"128": "img/icons/icon128.png" },
	"page_action": {
		"default_icon": "img/icons/icon19.png",
		"default_title": "Minimalist Gmail Options"
	},
	"background_page": "background.html",
	"content_scripts": [ {
		"matches": [ "*://mail.google.com/*" ],
		"js": [ "js/stylesheet.js" , "js/passive.js", "js/active.js", "js/constant.js", "js/favicon.js" ],
		"run_at": "document_end",
		"all_frames": true
	}, {
		"matches": [ "http://*/*", "https://*/*" ],
		"js": [ "js/mailto.js" ],
		"all_frames": true
	}, {
		"matches": [ "*://www.google.com/voice/*" ],
		"js": [ "js/voice.js" ],
		"all_frames": true
	}, {
		"matches": [ "*://www.google.com/reader/*" ],
		"js": [ "js/reader.js" ],
		"all_frames": true
	}, {
		"matches": [ "*://www.google.com/calendar/*" ],
		"js": [ "js/calendar.js" ],
		"all_frames": true
	} ],
	"converted_from_user_script": true,
	"options_page": "options.html",	
	"permissions": [
		"notifications",
		"tabs",
		"http://*/*",
		"https://*/*",
		"http://mail.google.com/*",
		"https://mail.google.com/*" ]
}